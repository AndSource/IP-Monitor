<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.zzy.net.sortlist.ClearEditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_selector"
        android:drawableLeft="@drawable/search"
        android:hint="Keyword"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="16dp"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/lvApp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tvAppHead"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/app_head"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="30dp"
            android:visibility="invisible" />

        <com.zzy.net.sortlist.SideBar
            android:id="@+id/sideApp"
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center"
            app:textColor="@color/colorDefaultText"
            app:selectTextColor="@color/colorDrak"
            app:bgDraw="@drawable/sidebar_background"/>
    </FrameLayout>

</LinearLayout>